{
  "manifest_version":2,
  "name": "Chrome Proxy",
  "version": "1.0",
  "description": "Proxy all traffic for a specific domain",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": "icons/test-48.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "proxy",
    "tabs",
    "storage",
    "notifications",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "icons": {
    "48": "icons/test-48.png"
  }
}
